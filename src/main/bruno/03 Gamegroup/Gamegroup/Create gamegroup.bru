meta {
  name: Create gamegroup
  type: http
  seq: 1
}

post {
  url: http://localhost:8080/api/gameGroups
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{access_token}}
}

body:json {
  {
    "name": "{{groupName}}"
  }
}

assert {
  res.status: eq 201
}

script:pre-request {
  bru.setVar("groupName", "Group_" + Date.now())
}

script:post-response {
  if (res.status < 300) {
    bru.setVar("gameGroupId", res.body.id)
  }
}
