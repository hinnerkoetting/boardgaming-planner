meta {
  name: Add Tag
  type: http
  seq: 2
}

post {
  url: {{server}}/api/tags
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{access_token}}
}

body:json {
  {
    "description": "COOP",
    "type": "GLOBAL"
  }
}

vars:pre-request {
  role: ROLE_ADMIN
}

assert {
  res.status: eq 200
}

script:post-response {
  if (res.status === 200) {
    bru.setVar("tagId", res.body.id)
  }
}
